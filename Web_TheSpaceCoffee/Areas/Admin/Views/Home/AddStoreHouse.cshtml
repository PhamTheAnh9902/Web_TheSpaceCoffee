@model Web_TheSpaceCoffee.Models.TbKhoVatTuCh
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddStoreHouse";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<h1>AddStoreHouse</h1>

<h4>Kho Mới</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddStoreHouse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaCuaHang" class="control-label"></label>
                <select asp-for="MaCuaHang" class="form-control" asp-items="ViewBag.MaCuaHang"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaVatTu" class="control-label"></label>
                <select asp-for="MaVatTu" class="form-control" asp-items="ViewBag.MaVatTu"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="StoreHouse">Quay lại danh sách</a>
</div>

